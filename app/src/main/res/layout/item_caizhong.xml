<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="@dimen/y6"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_name"
        style="@style/TestStyle2"
        android:text="---"/>

    <TextView
        android:id="@+id/tv_time"
        style="@style/TestStyle1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x15"
        android:textSize="12sp"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/y6"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lay_hongqiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x12"
            android:divider="@drawable/shape_divider_horizontal"
            android:showDividers="middle"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:gravity="center"
                android:text="--"
                android:background="@drawable/shape_round_red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:gravity="center"
                android:text="--"
                android:background="@drawable/shape_round_red"/>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_lanqiu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x12"
        android:divider="@drawable/shape_divider_horizontal"
        android:showDividers="middle"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_lanqiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:text="--"
            android:background="@drawable/shape_round_blue"/>
    </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_more"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x5"
        android:layout_alignParentRight="true"
        android:src="@mipmap/btu_more"/>
</RelativeLayout>