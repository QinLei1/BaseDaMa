<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- 选中时 -->
    <item android:state_pressed="true">
        
        <shape>
            <corners android:radius="@dimen/style_button_radius" />

            <solid android:color="@color/darkOrange" /><!-- 背景色 -->

            

            <size android:height="@dimen/style_button_shape_height" android:width="@dimen/style_button_shape_width" />

           <!--  <stroke android:width="1dp" android:color="@color/darkOrange" /> -->

         </shape> 
        
        
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/style_button_radius" /><!-- 圆角 -->
            
            <solid android:color="@color/grey_line_color" /><!-- 背景色 -->
            
            <size android:height="@dimen/style_button_shape_height" android:width="@dimen/style_button_shape_width" /><!-- 高宽度 -->

          <!--   <stroke android:width="1dp" android:color="#034978" />边线颜色 -->
        </shape>
    </item>
    
    <item >
       
         <shape>
            <corners android:radius="@dimen/style_button_radius" /><!-- 圆角 -->
            
            <solid android:color="@color/orange_" /><!-- 背景色 -->
            
            <size android:height="@dimen/style_button_shape_height" android:width="@dimen/style_button_shape_width" /><!-- 高宽度 -->

            <!-- <stroke android:width="1dp" android:color="@color/orange" />边线颜色 -->
        </shape>
    </item>
    

</selector>
